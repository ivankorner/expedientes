# Deshabilitar caché para archivos PHP dinámicos
<FilesMatch "\.php$">
    Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>

# Permitir GET y POST
Order allow,deny
Allow from all

# Reescritura de URLs si es necesario
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /expedientes/vistas/
    
    # No caché para listar_expedientes.php
    Header set Cache-Control "no-cache, no-store, must-revalidate"
</IfModule>
